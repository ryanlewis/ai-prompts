{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchFileNames": [
        ".app/**"
      ],
      "groupName": "eleventy-notes dependencies",
      "matchPackageNames": [
        "*"
      ]
    },
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "matchPackageNames": [
        "@11ty/eleventy",
        "@parcel/**",
        "parcel",
        "sass"
      ],
      "groupName": "build tools"
    },
    {
      "matchDepTypes": [
        "dependencies"
      ],
      "matchPackageNames": [
        "alpinejs",
        "lucide",
        "pagefind"
      ],
      "groupName": "frontend dependencies"
    }
  ],
  "ignorePaths": [
    "_site/**",
    ".plans/**"
  ],
  "schedule": [
    "before 4am on Monday"
  ],
  "timezone": "UTC",
  "labels": [
    "dependencies"
  ],
  "assignees": [
    "ryanlewis"
  ],
  "prHourlyLimit": 2,
  "prConcurrentLimit": 3,
  "semanticCommits": "enabled",
  "separateMinorPatch": true,
  "rangeStrategy": "bump"
}
